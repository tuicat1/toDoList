<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo4.ToDoController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <TextField fx:id="todoItem" />
    <ListView fx:id="todoList" editable="true" />

    <HBox>
        <Button alignment="BOTTOM_LEFT" onAction="#onAddButtonClick" text="Add" />
        <Button alignment="BOTTOM_RIGHT" onAction="#onRemoveButtonClick" text="Remove" />
    </HBox>
</VBox>
